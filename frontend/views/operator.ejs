<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head'); %>
	<script src="/js/redirect.js"></script>
	<script defer src="/js/alert.js"></script>
	<script defer src="/js/logout.js"></script>
	<script defer src="/js/chart.min.js"></script>
	<script defer src="/js/operator.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>

	<body>
		<div id="alerts" class="d-none"></div>
		<%- include('./partials/navbar'); %>

		<div class="my-container border">
			<div class="tab-content" id="myTabContent">
				<div class="d-flex flex-column justify-content-between align-items-center">
					<div class="form-floating my-3" style="width: 50%">
						<select class="form-select" id="operators"></select>
						<label for="operators">Operator</label>
					</div>
					<div class="mb-3" id="litepicker"></div>
				</div>
				<ul
					class="nav nav-tabs d-flex justify-content-center mb-3"
					id="myTab"
					role="tablist"
				>
					<li class="nav-item" role="presentation">
						<button
							class="nav-link active"
							id="home-tab"
							data-bs-toggle="tab"
							data-bs-target="#home"
							type="button"
							role="tab"
						>
							Charges by Operator
						</button>
					</li>
					<li class="nav-item" role="presentation">
						<button
							class="nav-link"
							id="profile-tab"
							data-bs-toggle="tab"
							data-bs-target="#profile"
							type="button"
							role="tab"
						>
							Station Summary
						</button>
					</li>
					<li class="nav-item" role="presentation">
						<button
							class="nav-link"
							id="contact-tab"
							data-bs-toggle="tab"
							data-bs-target="#contact"
							type="button"
							role="tab"
						>
							Pass Events
						</button>
					</li>
				</ul>
				<div class="tab-pane fade show active" id="home" role="tabpanel">
					<table id="table" class="table">
						<thead class="table-light"></thead>
						<tbody></tbody>
					</table>
					<div>
						<div class="d-flex flex-column align-items-center">
							<div style="height: 400px; width: 100%">
								<canvas id="chargesGraph"></canvas>
							</div>
							<div style="height: 400px; width: 100%" class="mb-3">
								<canvas id="totalGraph"></canvas>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade" id="profile" role="tabpanel">
					<div class="mb-3" style="height: 400px; width: 100%">
						<canvas id="area-3"></canvas>
					</div>
					<div class="form-floating mb-3" style="width: 50%; margin: auto">
						<select class="form-select" id="stations"></select>
						<label for="stations">Toll Stations</label>
					</div>
					<div id="passesperstation" class="p-3"></div>
				</div>
				<div class="tab-pane fade" id="contact" role="tabpanel">
					<div style="height: 50%; width: 50%; margin: 0 auto">
						<canvas style="width: 100%; height: 100%" id="chart2"></canvas>
					</div>
				</div>
			</div>
		</div>
		<%- include('./partials/footer'); %>
	</body>
</html>
