<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head'); %>
	<script src="/js/redirect.js"></script>
	<script defer src="/js/alert.js"></script>
	<script defer src="/js/logout.js"></script>
	<script defer src="/js/chart.min.js"></script>
	<script defer src="/js/operator.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>

	<body>
		<div id="alerts" class="d-none"></div>
		<%- include('./partials/navbar'); %>

		<div class="my-container border">
			<ul class="nav nav-tabs d-flex justify-content-center" id="myTab" role="tablist">
				<li class="nav-item" role="presentation">
					<button
						class="nav-link active"
						id="home-tab"
						data-bs-toggle="tab"
						data-bs-target="#home"
						type="button"
						role="tab"
					>
						Charges by Operator
					</button>
				</li>
				<li class="nav-item" role="presentation">
					<button
						class="nav-link"
						id="profile-tab"
						data-bs-toggle="tab"
						data-bs-target="#profile"
						type="button"
						role="tab"
					>
						Station Summary
					</button>
				</li>
				<li class="nav-item" role="presentation">
					<button
						class="nav-link"
						id="contact-tab"
						data-bs-toggle="tab"
						data-bs-target="#contact"
						type="button"
						role="tab"
					>
						Pass Events
					</button>
				</li>
			</ul>
			<div class="tab-content" id="myTabContent">
				<div class="d-flex flex-column justify-content-between align-items-center">
					<select id="operators" class="form-select m-3" style="width: fit-content">
						<option selected>Select operator</option>
					</select>
					<div class="mb-3" id="litepicker"></div>
				</div>
				<div class="tab-pane fade show active" id="home" role="tabpanel">
					<table id="table" class="table">
						<thead></thead>
						<tbody></tbody>
					</table>
					<div>
						<div class="d-flex flex-column align-items-center">
							<div style="height: 400px; width: 100%">
								<canvas id="chargesGraph"></canvas>
							</div>
							<div style="height: 400px; width: 100%" class="mb-3">
								<canvas id="totalGraph"></canvas>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade" id="profile" role="tabpanel">
					<div style="height: 50%; width: 50%; margin: 0 auto">
						<canvas style="width: 100%; height: 100%" id="chart2"></canvas>
					</div>
				</div>
				<div class="tab-pane fade" id="contact" role="tabpanel">
					<div style="height: 100px">
						<canvas style="width: 100%; height: 100%" id="area-3"></canvas>
					</div>
				</div>
			</div>
		</div>
		<%- include('./partials/footer'); %>
	</body>
</html>
